   Name = "Aimbot",
   Interact = 'Click',
   Callback = function()
 loadstring(game:HttpGet('https://pastebin.com/raw/wb3xYfcg'))()  -- The function that takes place when the button is pressed
   end,
})

local Button = Tab:CreateButton({
   Name = "Speed (HOLD X)",
   Interact = 'Click',
   Callback = function()
 loadstring(game:HttpGet('https://pastebin.com/raw/Kxb0wAjJ'))()  -- The function that takes place when the button is pressed
   end,
})

local Button = Tab:CreateButton({
   Name = "Infinite Jump",
   Callback = function()
 _G.infinjump = not _G.infinjump

if _G.infinJumpStarted == nil then
	--Ensures this only runs once to save resources
	_G.infinJumpStarted = true
	
	--The actual infinite jump
	local plr = game:GetService('Players').LocalPlayer
	local m = plr:GetMouse()
	m.KeyDown:connect(function(k)
		if _G.infinjump then
			if k:byte() == 32 then
			humanoid = game:GetService'Players'.LocalPlayer.Character:FindFirstChildOfClass('Humanoid')
			humanoid:ChangeState('Jumping')
			wait()
			humanoid:ChangeState('Seated')
			end
		end
	end)
end  -- The function that takes place when the button is pressed
   end,
})


local Button = Tab:CreateButton({
   Name = "Chams/ESP",
   Callback = function()
 local Rayfield = loadstring(game:HttpGet('https://pastebin.com/raw/EqwstreZ'))()  -- The function that takes place when the button is pressed
   end,
})

local Slider = Tab:CreateSlider({
   Name = "FOV Slider",
   Range = {70, 120}, -- Typical FOV range for Roblox
   Increment = 1,
   Suffix = "Degrees",
   CurrentValue = 70, -- Default FOV
   Flag = "FOVSlider",
   Callback = function(Value)
       -- Change the player's FOV based on the slider value
       game.Workspace.CurrentCamera.FieldOfView = Value
       print("FOV Set to: " .. Value) -- Print the current FOV value
   end,
})

-- Optional: Add a hitbox extender by modifying the slider's properties
local sliderFrame = Slider.Frame -- Hypothetical property to access the frame of the slider

sliderFrame.Size = UDim2.new(0, 300, 0, 50) -- Adjust the hitbox size
sliderFrame.Position = UDim2.new(0.5, -150, 0.5, -25) -- Center the slider in the UI

-- Add mouse input handling if needed
sliderFrame.MouseButton1Click:Connect(function()
   print("Slider hitbox clicked!")
end)

